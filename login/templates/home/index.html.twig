{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/home">Sasf</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/{{ app.user ? 'logout' : 'login' }}">
            {{ app.user ? 'Salir' : 'Iniciar Sesión' }}
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/register">{{ app.user ? '' : 'Registrarse' }}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin">Admin</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/profile">Perfil</a>
        </li>
    </div>
  </div>
</nav>

<div class="example-wrapper">
    <h1>Bienvenido {{ app.user ? app.user.email : '' }}! ✅</h1>
    {{ app.user ? '' : 'Inicie sesion o registrese para continuar' }}
</div>
{% endblock %}
